# Add home and local bin directories to the path
export PATH=$HOME/bin:/usr/local/bin:$HOME/.local/bin:$PATH

# Set locales
export LC_ALL=en_US.utf-8
export LANG=en_US.utf-8

# Update the prompt to show a prefix
PROMPT="$PROFILE_PROMPT_PREFIX %(?:%{$fg_bold[green]%}➜ :%{$fg_bold[red]%}➜ )"
PROMPT+=' %{$fg[cyan]%}%c%{$reset_color%} $(git_prompt_info)'

# Setup vim aliases
alias vim="nvim"
alias vi="nvim"
export EDITOR=nvim

# Fix go proxy issue
export GOPROXY=direct

# python pip fix
alias pip="python -m pip"

# Add rust cargo bin to path
export PATH=$HOME/.cargo/bin:$PATH

# Helper function to install rust plugins
asdf_install_latest() {
    asdf plugin add $1 "https://github.com/$2.git"
    asdf install $1 latest
    asdf global $1 latest
}
